<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

<body class="only-bg">
  <main id="register-container">
    <a href="/">      
      <img src="images/navbar/gigagames_logo.png" alt="Logo Gigagames" class="login-logo-gameverse">
    </a>

    <h1 class="login-title">Registrarse</h1>

    <form action="#" method="GET" class="form-login-registro">
      <div class="input-group">
        <label>
          <span>Correo electronico</span>
          <input type="email" name="email">
        </label>
      </div>

      <div class="input-group">
        <label>
          <span>Fecha de nacimiento</span>
          <input type="date" name="birthdate">
        </label>
      </div>

      <div class="input-group">
        <label>
          <span>Pa&iacute;s</span>
          <select name="pais" id="paises">
            <option disabled selected>Seleccionar</option>
            <option value="Argentina">Argentina</option>
            <option value="Bolivia">Bolivia</option>
            <option value="Brasil">Brasil</option>
            <option value="Chile">Chile</option>
            <option value="Colombia">Colombia</option>
            <option value="Ecuador">Ecuador</option>
            <option value="Paraguay">Paraguay</option>
            <option value="Perú">Perú</option>
            <option value="Uruguay">Uruguay</option>
            <option value="Venezuela">Venezuela</option>
          </select>
        </label>
      </div>

      <div class="input-flex">
        <div class="input-group">
          <label>
            <span>Nombre</span>
            <input type="text" name="nombre">
          </label>        
        </div>
  
        <div class="input-group">
          <label>
            <span>Apellido</span>
            <input type="text" name="apellido">
          </label>
        </div>
      </div>

      <div class="input-group">
        <label>
          <span>Nombre de usuario</span>
          <input type="text" name="usuario">
        </label>
      </div>

      <div class="input-group">
        <label>
          <span>Contrase&nacute;a</span>
          <input type="password" name="password">
        </label>
      </div>

      <div class="button-group">
        <button type="submit">Iniciar</button>
      </div>
    </form>

    <div class="login-to-register">
      <p>¿Ya estas registrado?</p>
      <a href="/login">
        <i class="fas fa-angle-left"></i>
        Iniciar Sesi&oacute;n
        <i class="fas fa-angle-right"></i></i>
      </a>
    </div>
  </main>
</body>

</html>